{
    "manifest_version": 3,
    "name": "Distraction Dodger",
    "description": "Do your job and do it right by dodging the distractions constantly thrown at you ü•∑üèø",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
    "default_popup": "popup.html",
    "default_title": "Distraction Dodger",
    "default_icon": {
        "16": "icons/stopwatch-icon-16-transparent.png",
        "48": "icons/stopwatch-icon-48-transparent.png",
        "128": "icons/stopwatch-icon-128-transparent.png"
    },
    "default_popup_width": 350,
    "default_popup_height": 500
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"],
        "css": ["content-style.css"],
        "run_at": "document_start"
      }
    ],
    "icons": {
      "16": "icons/stopwatch-icon-16-transparent.png",
      "48": "icons/stopwatch-icon-48-transparent.png",
      "128": "icons/stopwatch-icon-128-transparent.png"
    }
 }